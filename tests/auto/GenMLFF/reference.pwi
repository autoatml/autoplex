&CONTROL
 calculation = 'scf'
 restart_mode = 'from_scratch'
 prefix = 'FeCOH'
 tprnfor = .true.
 tstress = .true.
 outdir = './OUT/'
 disk_io = 'none'
 pseudo_dir = '/path/to/directory/PSEUDO'
 max_seconds = 86000
/

&SYSTEM    
 ibrav = 0
 nat = 506
 ntyp = 4
 ecutwfc = 60
 ecutrho = 480
 occupations = 'smearing'
 smearing = 'gaussian'
 degauss = 0.00735
 nosym=.true.
 vdw_corr = 'dft-d3'
 nspin = 2
 starting_magnetization(1) = 0.4
/

&ELECTRONS
 diagonalization = 'david'
 mixing_beta = 0.15
 electron_maxstep = 150
 mixing_mode = 'local-TF'
 mixing_ndim = 16
 conv_thr = 1.0d-6
/

&IONS
/

ATOMIC_SPECIES
Fe 55.845 Fe.pbe-sp-van.UPF
C  12.011 C.pbe-n-kjpaw_psl.1.0.0.UPF
O  15.999 O.pbe-n-kjpaw_psl.1.0.0.UPF
H  2.016  H.pbe-kjpaw_psl.1.0.0.UPF

K_POINTS automatic
4 4 4 1 1 1
